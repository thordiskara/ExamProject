---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import BurgerMenu from "../components/BurgerMenu.astro";
---

<Layout>
  <Header />
  <div class="bg-background-blue">
    <h2>Thank you for your order!</h2>
    <p>
      Your order was completed successfully. The order confirmation has been
      sent to your email, including all details about your order as well as
      tracking information.
    </p>
    <h6>Sit back and relax, amazing wine coming your way!</h6>
  </div>

  <Footer />
  <BurgerMenu />
</Layout>
