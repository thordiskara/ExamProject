---
import Logo from '../svg/logo/logo.svg'
import Search from '../svg/header-icons/search.svg'
import User from '../svg/header-icons/user.svg'
import Cart from '../svg/header-icons/cart.svg'
import "../styles/global.css"
import LogoMobile from '../svg/logo/logo-mobile.svg'
import Burger from '../svg/header-icons/burger.svg'
import BurgerMenu from '../components/BurgerMenu.astro'



---
<header class="px-header-x py-header-y relative">

    <div class="language hidden absolute lg:flex right-4 top-4 gap-1">
        <a href="">En</a>
        <p>/</p>
        <a href="">Da</a>
    </div>

    <div class="desktop-header hidden lg:flex lg:justify-between lg:w-full lg:items-center">
        <div class="pr-20">
            <img src={Logo} alt="logo"/>
        </div>
    
        <div>
            <nav>
                <ul class="flex gap-10">
                    <li><a class="navigation" href="Shop.astro">Shop</a></li>
                    <li><a class="navigation"  href="WineTasting.astro">Wine Tastings</a></li>
                    <li><a class="navigation"  href="WineSubscriptions.astro">Wine Subscription</a></li>
                    <li><a class="navigation"  href="About.astro">About</a></li>
                </ul>
            </nav>
        </div>
    
        <div class="header-icons flex gap-4">
            <img class="w-[1.375rem]" src={Search} alt="search"/>
            <img class="w-[2.5rem]" src={User} alt="user"/>
            <img class="w-[1.875rem]" src={Cart} alt="cart"/>
        </div>
    </div>


    <div class="mobile-header lg:hidden flex justify-between w-full items-center">
        <div>
            <img src={LogoMobile} alt="logo mobile"/>
        </div>

        <div class="header-icons flex">
            <img class="w-[2.25rem] hamburger" src={Burger} alt="burger menu"/>
        </div>

        <BurgerMenu />
    
    </div>
</header>

<style>
    a{
    color:var(--color-accent-red-500);
    text-transform: uppercase;
    font-size: var(--font-size-body);
}

a:hover{
    border-bottom: var(--color-accent-red-500) 2px solid;
}

.language{
    color:var(--color-accent-red-500);
}
</style>